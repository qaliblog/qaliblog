<h1 class="hart"><%= t('views.users.loginacc') %></h1>




<div class="row">
  <div class="col-12">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label t('views.users.email') %>
        </div>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control", placeholder: t('views.users.enteremail') %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label t('views.users.password') %>
        </div>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control", placeholder: t('views.users.enterpassword'), autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-10">
          <%= f.submit t('views.users.login'), class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-2 offset-10">
      <%= link_to t('views.users.backtohome'), root_path %>
    </div>
  </div>
</div>
