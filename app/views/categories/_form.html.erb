
<%= render 'shared/errors', obj: @category %>


<div class="row">
  <div class="col-12">
    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label t('views.categoryform.name') %>
        </div>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control", placeholder: t('views.categoryform.category'), autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-10">
          <%= f.submit t('views.categoryform.submit') , class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-2 offset-10">
      <%= link_to t('views.categoryform.backtoarticles'), articles_path %>
    </div>
  </div>
</div>
