
<%= render 'shared/errors', obj: @contact %>


<div class="row">
  <div class="col-12">
    <%= form_for(@contact, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label t('views.contactform.title') %>
        </div>
        <div class="col-12">
          <%= f.text_field :title, class: "form-control", placeholder: t('views.contactform.title'), autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label t('views.contactform.description') %>
        </div>
        <div class="col-12">
          <%= f.text_area :description, class: "form-control", rows: 6, placeholder: t('views.contactform.description') %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-12">
          <%= f.submit t('views.contactform.submit') , class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-2 offset-10">
      <%= link_to t('views.contactform.backtoroot'), articles_path %>
    </div>
  </div>
</div>
