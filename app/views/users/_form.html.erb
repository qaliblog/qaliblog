<%= render 'shared/errors', obj: @user %>


<div class="row">
  <div class="col-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label t('views.users.name') %>
        </div>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control", placeholder: t('views.users.entername'), autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label t('views.users.lastname') %>
        </div>
        <div class="col-10">
          <%= f.text_field :lastname, class: "form-control", placeholder: t('views.users.enterlastname') %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label t('views.users.phonenumber') %>
        </div>
        <div class="col-10">
          <%= f.text_field :phonenumber, class: "form-control", placeholder: t('views.users.enterphonenumber') %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label t('views.users.username') %>
        </div>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control", placeholder: t('views.users.enterusername') %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label t('views.users.email') %>
        </div>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control", placeholder: t('views.users.enteremail') %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label t('views.users.password') %>
        </div>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control", placeholder: t('views.users.enterpassword') %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-2">
          <%= f.label t('views.users.passwordconf') %>
        </div>
        <div class="col-10">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: t('views.users.enterpasswordconf') %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-10">
          <%= f.submit(@user.new_record? ? t('views.users.signup') : t('views.users.update'), class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>
    <div class="col-2 offset-10">
      <%= link_to t('views.users.backtohome'), root_path %>
    </div>
  </div>
</div>
